<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security.xsd">
    <http auto-config="true">
        <intercept-url pattern="/order-list" access="ROLE_ADMIN"/>
        <intercept-url pattern="/order-list" access="ROLE_ADMIN"/>
        <intercept-url pattern="/order-view/*" access="ROLE_ADMIN"/>
        <form-login login-page='/login' username-parameter="username"
                    password-parameter="password" default-target-url="/order-list"
                    authentication-failure-url="/login?authfailed"/>
        <logout logout-success-url="/login?logout"/>
    </http>
    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query=
                                       "select login, pass, 1 from users where login=?"
                               authorities-by-username-query=
                                       "select users.login, roles.rolename from roles inner join users on roles.user_id=(select users.user_id from users where users.login=?)"/>
        </authentication-provider>
    </authentication-manager>
</beans:beans>
